@model IEnumerable<SistemaRepuesto.Models.Login>

@{
    ViewBag.Title = "Index";
    string activo;
}

<div class="card o-hidden border-0 shadow mb-2">
    <div class="card-body">
        <div class="col-auto float-right">
            <i class="fas fa-cog fa-3x text-gray-300"></i>
        </div>
        <h2 class="card-title text-primary">Usuarios</h2>
        @Html.ActionLink("Nuevo Usuario", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-body">
            <table class="table table-responsive dataTable" role="grid">
                <thead>
                    <tr role="row">
                        <th>Usuario</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Estatus</th>
                        <th>Role</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                    <tr role="row">
                        <td>@Html.DisplayFor(model => u.UserName)</td>
                        <td>@Html.DisplayFor(model => u.PersonalName)</td>
                        <td>@Html.DisplayFor(model => u.Email)</td>
                        @if (u.LoginEstatus == true) { activo = "Si"; } else { activo = "No"; }
                        <td>@activo</td>
                        <td>@Html.DisplayFor(model => u.Role.RoleDescripcion)</td>
                        <td>
                            @Html.ActionLink(" ", "Edit", new { id = u.LoginID }, new { @class = "fa fa-edit" })
                            @*@Html.ActionLink(" ", "Details", new { id = u.LoginID }, new { @class = "fa fa-th-list" })*@
                            @Html.ActionLink(" ", "Delete", new { id = u.LoginID }, new { @class = "fa fa-trash" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink(" Inicio", "Index", "Home", null, new { @class = "fa fa-home" })
</div>

