@{
    ViewBag.Title = "Home Page";
}

@*Inicio Carrusel*@
<div id="carruselInicio" class="carousel slide bg-gradient-info" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carruselInicio" data-slide-to="0" class="active"></li>
        <li data-target="#carruselInicio" data-slide-to="1"></li>
        <li data-target="#carruselInicio" data-slide-to="2"></li>
        <li data-target="#carruselInicio" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/Imagenes/Logotipo.png" class="d-block w-100" alt="..."  style="max-height:300px">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Imagenes/001.jpg" class="d-block w-100" alt="..."  style="max-height:300px">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Imagenes/002.jpg" class="d-block w-100" alt="..." style="max-height:300px">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Imagenes/003.jpg" class="d-block w-100 h-50" alt="..." style="max-height:300px">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carruselInicio" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carruselInicio" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
@*Fin Carrusel*@
<hr/>

@*Inicio Tarjetas*@
<div class="row">
    <div class="col-sm-6">
        <div class="card text-white bg-primary mb-4 h-100">
            <div class="card-header badge-info">Acerca de...</div>
            <div class="card-body">
                <h5 class="card-title">Sobre Nosotros</h5>
                <p class="card-text">
                    Somos estudiantes del Diplomado Desarrollo Web con C#, impartido por la Universidad Autonoma De Santo Domingo (UASD).<br />
                    Elegimos crear un sistema de repuesto como nuestro proyecto final para cualquier empresa dedicada a la venta de repuestos...
                </p>
                @Html.ActionLink("Saber mas...","About","Home",null,new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>

    <div class="col-sm-6 float-lg-right">
        <div class="card text-white bg-primary mb-4 h-100">
            <div class="card-header badge-info">Contacto</div>
            <div class="card-body">
                <h5 class="card-title">Contacta con Nosotros</h5>
                <p class="card-text">
                    A continuación haga clic en "Más..." para ver nuestra información de contacto.
                </p>
                @Html.ActionLink("Más...", "Contact", "Home", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>
@*Fin Tarjetas*@
