@using SistemaRepuesto.Models;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Repuesto JC</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>



<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            @Html.ActionLink(" Repuestos JC", "Index", "Home", null, new { @class = "sidebar-brand fas fa-laptop-house" })

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Opciones de Menu -->
            @Html.Partial("_Menu")

            <!-- Divider
            <hr class="sidebar-divider d-none d-md-block">-->

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 sticky-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Search -->
                    @if (Session["LoginCredentials"] != null)
                    {
                        <script type="text/javascript">
                            $(document).ready(function () {
                                $("#verBusqueda").show();
                                $("#carrito").show();
                            });
                        </script>
                    }
                    else
                    {
                        <script type="text/javascript">
                            $(document).ready(function () {
                                $("#verBusqueda").hide();
                            });
                        </script>
                    }

                    <div id="verBusqueda">
                        <!-- Topbar Search -->
                        <form action="/Ventas/Index" method="post" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <div class="input-group">
                                <input name="TextoBuscar" type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                                <div class="input-group-append">
                                    <form action="/Ventas/Index" method="post">
                                        <button class="btn btn-primary" name="BotonBuscar" aria-label="TestoBuscar" type="submit">
                                            Buscar <i class="fas fa-search fa-sm"></i>
                                        </button>
                                    </form>
                                </div>

                            </div>

                        </form>
                    </div>

                    <ul class="nav navbar-nav navbar-righ" id="carrito" style="display:none;align:righ;">
                        <abbr title="Ver Carro Compras">
                            <a href="/Ventas/Carro" class="btn btn-outline-primary">
                                <span class="fa fa-shopping-cart">
                            </a>
                        </abbr>
                    </ul>
                    
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        <!-- Nav Item - Login -->
                        <li class="nav-item dropdown no-arrow">
                            @if (Session["LoginCredentials"] != null)
                            {
                                <i class="fas fa-user-circle fa-1x fa-fw text-gray-300"></i>
                                @Html.ActionLink(@Session["PersonalName"].ToString() + ", Logout", "LogOff", "Login", null, new { @class = "text-gray-300" })
                            }
                            else
                            {
                                <i class="fas fa-user-lock fa-1x fa-fw text-gray-300"></i>
                                @Html.ActionLink(" Login", "Login", "Login", null, new { @class = "text-gray-300" })
                            }
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    @RenderBody()
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Repuestos JC 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

</html>
