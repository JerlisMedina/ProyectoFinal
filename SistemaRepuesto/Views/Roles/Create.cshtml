@model SistemaRepuesto.Models.Role

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="card o-hidden border-0 shadow-lg my-5">
            <h5 class="card-header bg-primary text-white">
                <div class="col-auto float-right">
                    <i class="fas fa-file fa-1x text-gray-300"></i>
                </div>
                Nuevo Role
            </h5>

            <div class="card-body p-5">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.RoleDescripcion, "Role", htmlAttributes: new { @class = "control-label col-md-10" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.RoleDescripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RoleDescripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.RoleEstatus, "Activo", htmlAttributes: new { @class = "control-label col-md-10" })
                        <div class="col-md-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.RoleEstatus)
                                @Html.ValidationMessageFor(model => model.RoleEstatus, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink(" Back to List", "Index", null, new { @class = "fa fa-home" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
