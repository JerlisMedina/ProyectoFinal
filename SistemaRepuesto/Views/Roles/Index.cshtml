@model IEnumerable<SistemaRepuesto.Models.Role>

@{
    ViewBag.Title = "Index";
    string activo;
}

<div class="card o-hidden border-0 shadow mb-2">
    <div class="card-body">
        <div class="col-auto float-right">
            <i class="fas fa-cog fa-3x text-gray-300"></i>
        </div>
        <h2 class="card-title text-primary">Roles de Usuario</h2>
        @Html.ActionLink("Nuevo Role", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-body">
            <table class="table table-responsive dataTable" role="grid">
                <thead>
                    <tr role="row">
                        <th>Role</th>
                        <th>Activo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr role="row">
                            <td>@Html.DisplayFor(model => r.RoleDescripcion)</td>
                            @if (r.RoleEstatus == true) { activo = "Si"; } else { activo = "No"; }
                            <td>@activo</td>
                            <td>
                                @Html.ActionLink(" Editar", "Edit", new { id = r.RoleID }, new { @class = "fa fa-edit" })
                                @*@Html.ActionLink(" ", "Details", new { id = r.RoleID }, new { @class = "fa fa-th-list" })*@
                                @*@Html.ActionLink(" Eliminar", "Delete", new { id = r.RoleID }, new { @class = "fa fa-trash" })*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink(" Inicio", "Index", "Home", null, new { @class = "fa fa-home" })
</div>

