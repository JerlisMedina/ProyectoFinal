@model SistemaRepuesto.Models.Proveedore

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar</h2>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="container-fluid">
    <div class="row offset-4">
        <div class="card o-hidden border-bottom-primary shadow-lg h-100" style="width:18rem;">
            <img src="~/Content/Imagenes/@Model.ProvImagen" class="card-img-top w-100 h-50" />
            <div class="card-body">
                <h5 class="card-title text-gray-500"><b>@Html.DisplayFor(model => model.Razon_Social)</b></h5>
                <p class="card-text text-gray-500">
                    <b>Codigo: </b>@Html.DisplayFor(model => model.Codigo)
                </p>
                <p class="card-text text-gray-500">
                    <b>Dirección: </b>@Html.DisplayFor(model => model.Direccion)
                <p />
                <p class="card-text text-gray-500">
                    <b>Telefono: </b>@Html.DisplayFor(model => model.Telefono)
                <p />
                <p class="card-text text-gray-500">
                    <b>Email: </b>@Html.DisplayFor(model => model.Email)
                <p />
                <p class="card-text text-gray-500">
                    <b>RNC: </b>@Html.DisplayFor(model => model.RNC)
                <p />

                <div class="card-text">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color">
                            <input type="submit" value="Eliminar" class="btn btn-primary btn-block"/>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink(" Back to List", "Index", null, new { @class = "fa fa-home" })
</p>
