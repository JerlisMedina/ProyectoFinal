@model SistemaRepuesto.Models.MainMenu

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MainMenuID)

        <div class="card o-hidden border-0 shadow-lg my-5">
            <h5 class="card-header bg-primary text-white">
                <div class="col-auto float-right">
                    <i class="fas fa-edit fa-1x text-gray-300"></i>
                </div>
                Editar Opcion De Menu: @Model.MainDescripcion
            </h5>

            <div class="card-body p-5">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MainDescripcion, "Descripcion", htmlAttributes: new { @class = "control-label col-md-10" })
                        <div>
                            @Html.EditorFor(model => model.MainDescripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MainDescripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MainEstatus, "Activo", htmlAttributes: new { @class = "control-label col-md-10" })
                        <div class="checkbox">
                            @Html.EditorFor(model => model.MainEstatus)
                            @Html.ValidationMessageFor(model => model.MainEstatus, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink(" Back to List", "Index", null, new { @class = "fa fa-home" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
